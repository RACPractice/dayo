.row-fluid
  .span6.offset3
    %fieldset
      %legend Campaign Listing

      %table.table.table-striped.table-bordered.table-condensed
        %tr
          %th Active
          %th Campaign Name
          %th Origin
          %th Destination
          %th Base Airlines
          %th Comparative Airlines
          %th Advance Purchase Days
          %th Length of Stay
          %th Score
          %th Actions
        - @campaigns.each do |campaign|
          %tr
            %td= campaign.active
            %td= campaign.name.upcase
            %td= campaign.base_airlines
            %td= campaign.comparative_airlines
            %td= campaign.advance_days
            %td= campaign.length_of_stay
            %td= campaign.score
            %td= link_to 'Edit', edit_campaign_path(campaign), :class => "btn btn-mini"
            %td= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini"
            -if campaign.active
            %td= link_to ' Deactivate', deactivate_campaign_path(campaign), :class => "btn btn-mini"
            -else
              %td= link_to 'Activate', deactivate_campaign_path(campaign), :class => "btn btn-mini"


      %br

      = link_to 'New Campaign', new_campaign_path


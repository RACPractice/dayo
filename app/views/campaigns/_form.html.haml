= form_for @campaign do |f|
  - if @campaign.errors.any?
    #error_explanation
      %h2= "#{pluralize(@campaign.errors.count, "error")} prohibited this campaign from being saved:"
      %ul
        - @campaign.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    =f.text_field :name
  .field
    = f.label :routes_text
    =f.select :routes_text, Route.options_for_routes_select
  .field
    = f.label :base_airlines
    =f.text_field :base_airlines
  .field
    = f.label :comparative_airlines
    =f.text_field :comparative_airlines
  .field
    = f.label :advance_days
    =f.text_field :advance_days
  .field
    = f.label :length_of_stay
    =f.text_field :length_of_stay
  .field
    = f.label :score
    =f.text_field :score
  .field
    = f.label :schedule_text
    =f.select :schedule_text, Schedule.options_for_select
  .form-actions
    = content_tag :button,  :type => :submit, :class => 'btn btn-primary' do
      Create Campaign

= form_for @campaign do |f|
  - if @campaign.errors.any?
    #error_explanation
      %h2= "#{pluralize(@campaign.errors.count, "error")} prohibited this campaign from being saved:"
      %ul
        - @campaign.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    =f.text_field :name
  .field
    = f.label :origin
    =f.text_field :origin
  .field
    = f.label :destination
    =f.text_field :destination
  .field
    = f.label :base_airline
    =f.text_field :base_airline
  .field
    = f.label :comparative_airline
    =f.text_field :comparative_airline
  .field
    = f.label :advance_days
    =f.text_field :advance_days
  .field
    = f.label :length_of_stay
    =f.text_field :length_of_stay
  .field
    = f.label :score
    =f.text_field :score
  .actions
    = f.submit 'Save'

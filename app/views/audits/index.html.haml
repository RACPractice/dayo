.container
  .row-fluid
    %fieldset
      %legend Audits of latest changes
      %table.table.table-striped.table-bordered.table-condensed
        %tr
          %th Object modified
          %th Action
          %th Remote IP address
          %th Username
          %th Date

        - @audits.each do |c|
          %tr
            %td= format_audited_object(c)
            %td= c.action
            %td= c.remote_address
            %td= 'Demo user'
            %td= c.created_at.to_formatted_s(:short)

      = will_paginate @audits
